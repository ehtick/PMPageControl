<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Du.PMPage.Wpf">
    <Style TargetType="{x:Type local:SldWpfSelectionList}">
        <Setter Property="Focusable" Value="True"/>
        <!--<Setter Property="ContextMenu">
            <Setter.Value>
                <ContextMenu>
                    <MenuItem Header="消除选择"></MenuItem>
                    <MenuItem Header="删除"></MenuItem>
                </ContextMenu>
            </Setter.Value>
        </Setter>-->
        <Style.Triggers>
            <Trigger Property="IsActive" Value="True">
                <Setter Property="Background" Value="#FFCFE4F7"/>
                <Setter Property="BorderBrush" Value="#FF53A9FF"></Setter>
                <Setter Property="BorderThickness" Value="2"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="ListBox" x:Key="SldListBoxStyle">
        <Setter Property="Background" Value="#FFCFE4F7"/>
        <Setter Property="BorderBrush" Value="#FF53A9FF"></Setter>
        <Setter Property="BorderThickness" Value="2"></Setter>
    </Style>
</ResourceDictionary>